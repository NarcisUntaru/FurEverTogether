@page
@using FurEver_Together.Enums
@model IndexModel
@{
    ViewData["Title"] = "Manage Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="\css\profile.css">
    <link rel="icon" type="image/png" href="/uploads/Logo/Icon.png" />
</head>
<body>
    @functions {
        public string GetStatusClass(ApplicationStatus status)
        {
            return status switch
            {
                ApplicationStatus.Pending => "status-pending",
                ApplicationStatus.Rejected => "status-rejected",
                ApplicationStatus.Approved => "status-approved",
                _ => ""
            };
        }
    }

    <div class="profile-container">
        <div class="profile-picture"></div>
        <div class="profile-details">
            <h1>Welcome, @(Model.Username?.Split('@')[0] ?? "User")</h1>
        </div>
    </div>

    <div class="profile-actions-container">
        <div class="profile-actions">
            <button onclick="showContent('overview', this)">Overview</button>
            <button onclick="showContent('adoption-requests', this)">Adoption Requests</button>
            <button onclick="showContent('volunteer-applications', this)">Volunteer Applications</button>
            <button onclick="showContent('donation-history', this)">Donation History</button>
            @if (User.IsInRole("Administrator"))
            {
                <button onclick="showContent('admin-panel', this)">Admin Panel</button>
            }
        </div>
    </div>

    <div id="overview" class="profile-content" style="display:block;">
        <h2>Account Overview</h2>
        <p>When you registered your account, you were required to complete a brief questionnaire to assess your personality traits.</p>
        <p>Below you can see all the traits listed.</p>
        <div class="right-column">
            @{
                var personalityTraits = new List<(string Name, string? Value)>
                        {
                        ("How active is your lifestyle?", Model.Personality != null ? Model.Personality.EnergyLevel.ToString() : "N/A"),
                        ("Do you prefer quiet time or social interactions?", Model.Personality != null ? Model.Personality.Sociability.ToString() : "N/A"),
                        ("Do you want a pet that loves constant cuddles or is more independent?", Model.Personality != null ? Model.Personality.AffectionLevel.ToString() : "N/A"),
                        ("Are you willing to train a pet or prefer one already trained?", Model.Personality != null ? Model.Personality.Trainability.ToString() : "N/A"),
                        ("Do you enjoy interactive play with pets regularly?", Model.Personality != null ? Model.Personality.Playfulness.ToString() : "N/A"),
                        ("Can you handle a pet that is aggressive?", Model.Personality != null ? Model.Personality.AggressionLevel.ToString() : "N/A"),
                        ("Can you tolerate a pet that a lot of noise?", Model.Personality != null ? Model.Personality.NoiseLevel.ToString() : "N/A"),
                        ("Do you have children living with you?", Model.Personality != null ? Model.Personality.GoodWithKids.ToString() : "N/A"),
                        ("Do you already have other pets at home?", Model.Personality != null ? Model.Personality.GoodWithOtherPets.ToString() : "N/A"),
                        ("How structured is your daily routine?", Model.Personality != null ? Model.Personality.Adaptability.ToString() : "N/A"),
                        ("Would you be okay with a pet that needs constant attention when alone?", Model.Personality != null ? Model.Personality.AnxietyLevel.ToString() : "N/A")
                        };


                var traitImages = new Dictionary<string, string>
                {
                    ["How active is your lifestyle?"] = "/uploads/Personality/EnergyLevel.png",
                    ["Do you prefer quiet time or social interactions?"] = "/uploads/Personality/Sociability.png",
                    ["Do you want a pet that loves constant cuddles or is more independent?"] = "/uploads/Personality/AffectionLevel.png",
                    ["Are you willing to train a pet or prefer one already trained?"] = "/uploads/Personality/Trainability.png",
                    ["Do you enjoy interactive play with pets regularly?"] = "/uploads/Personality/Playfulness.png",
                    ["Can you handle a pet that is aggressive?"] = "/uploads/Personality/AggressionLevel.png",
                    ["Can you tolerate a pet that a lot of noise?"] = "/uploads/Personality/NoiseLevel.png",
                    ["Do you have children living with you?"] = "/uploads/Personality/GoodWithKids.png",
                    ["Do you already have other pets at home?"] = "/uploads/Personality/GoodWithOtherPets.png",
                    ["How structured is your daily routine?"] = "/uploads/Personality/Adaptability.png",
                    ["Would you be okay with a pet that needs constant attention when alone?"] = "/uploads/Personality/AnxietyLevel.png"
                };
            }
            <div class="personality-grid">
                @foreach (var trait in personalityTraits)
                {
                    var imgSrc = traitImages.ContainsKey(trait.Name) ? traitImages[trait.Name] : "https://a1petmeats.com.au/wp-content/uploads/2019/11/no-image-available.jpg";

                    <div class="personality-item">
                        <img src="@imgSrc" alt="@trait.Name" />
                        <p class="trait-name"><strong>@trait.Name</strong></p>
                        <p class="trait-value">@trait.Value</p>
                    </div>
                }
            </div>
        </div>

    </div>


    <div id="adoption-requests" class="profile-content" style="display:none;">
        <h2>Adoption Requests</h2>

        @if (Model.UserAdoptionRequests != null && Model.UserAdoptionRequests.Any())
        {
            <ul class="adoption-list">
                @foreach (var request in Model.UserAdoptionRequests)
                {
                    <li class="adoption-item">
                        <div class="pet-info">
                            <strong>Pet Name:</strong> @request.Pet?.Name
                        </div>
                         <div class="adopter-info">
                            <strong>Request Date:</strong> @request.RequestDate
                        </div> 

                        <div class="status-info">
                            <span class="@GetStatusClass(request.Status)">@request.Status</span>
                        </div>
                        <div class="actions">
                            <a asp-controller="Adoptions" asp-action="Details" asp-route-id="@request.Id" class="btn">View</a>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No pending adoption requests found.</p>
        }
    </div>

    <div id="volunteer-applications" class="profile-content" style="display:none;">
        <h2>Volunteer Applications</h2>

        @if (Model.UserVolunteerApplications != null && Model.UserVolunteerApplications.Any())
        {
            <ul class="adoption-list">
                @foreach (var application in Model.UserVolunteerApplications)
                {
                    <li class="adoption-item">
                        <div class="pet-info">
                            <strong>Full Name:</strong> @application.FullName
                        </div>
                         <div class="adopter-info">
                            <strong>Request Date:</strong> @application.RequestDate
                        </div> 

                        <div class="status-info">
                            <strong>Status:</strong> <span class="@GetStatusClass(application.Status)">@application.Status</span>
                        </div>
                        <div class="actions">
                            <a asp-controller="Volunteer" asp-action="Details" asp-route-id="@application.Id" class="btn">View</a>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>You haven't submitted a volunteer application yet.</p>
        }
    </div>


    </div>

    <div id="donation-history" class="profile-content" style="display:none;">
        <h2>Donation History</h2>
        <p>No donations found.</p>
    </div>















    @if (User.IsInRole("Administrator"))
    {
        <div id="admin-panel" class="profile-content" style="display:none;">
            <h2>Admin Panel</h2>
            <div class="admin-action">
                <form method="get" asp-controller="Adoptions" asp-action="Create" style="display:inline;">
                    <button type="submit" class="add-adoption-action">Add Adoption</button>
                </form>

                <form method="get" asp-controller="Pets" asp-action="Create" style="display:inline;">
                    <button type="submit" class="add-pet-action">Add Pet</button>
                </form>

                <form method="get" asp-controller="Shelters" asp-action="Create" style="display:inline;">
                    <button type="submit" class="add-adoption-action">Add Shelter</button>
                </form>

                <button type="button" class="admin-action-button" onclick="showAdminContent('admin-view-adoption-requests', this)">View Adoption Requests</button>
                <button type="button" class="admin-action-button" onclick="showAdminContent('admin-view-volunteer-requests', this)">View Volunteer Requests</button>
                <button type="button" class="admin-action-button" onclick="showAdminContent('view-pets', this)">View Pets</button>
                <button type="button" class="admin-action-button" onclick="showAdminContent('admin-view-shelters', this)">View Shelters</button>
                <button type="button" class="admin-action-button" onclick="showAdminContent('admin-view-users', this)">View Users</button>
                <button type="button" class="admin-action-button" onclick="showAdminContent('admin-data-insights', this)">Data Insights & Analytics</button>

            </div>
            <div id="view-adoption-requests" class="admin-content" style="display:none;">
                <h3>Adoption Requests</h3>
            </div>

            <div id="view-pets" class="admin-content" style="display:none;">
                <h3>Pet List</h3>

                @if (Model.Pets != null && Model.Pets.Any())
                {
                    <ul class="adoption-list">
                        @foreach (var pet in Model.Pets)
                        {
                            <li class="adoption-item">
                                <div class="pet-info">
                                    <strong>Name:</strong> @pet.Name
                                </div>
                                <div class="adopter-info">
                                    <strong>Pet Id:</strong> @pet.PetId
                                </div>
                                <div class="status-info">
                                    <strong>Has Active Adoption?:</strong>
                                    @((pet.Adoption != null && pet.Adoption.Status == ApplicationStatus.Approved) ? "True" : "False")
                                </div>
                                <div class="status-info">
                                    <strong>Adopted?:</strong> @pet.IsAdopted
                                </div>
                                <div class="admin-buttons">
                                    <a class="edit-button" asp-controller="Pets" asp-action="Edit" asp-route-id="@pet.PetId">Edit</a>
                                    <form method="post" asp-controller="Pets" asp-action="Delete" asp-route-id="@pet.PetId"
                                          onsubmit="return confirm('Are you sure you want to delete this pet?');"
                                          style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="delete-button">Delete</button>
                                    </form>
                                    <a class="view-button" asp-controller="Pets" asp-action="Details" asp-route-id="@pet.PetId">View</a>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>No pets found.</p>
                }
            </div>

            <div id="admin-view-adoption-requests" class="admin-content" style="display:none;">
                <h3>All Adoption Requests</h3>
                
                <div style="margin-bottom: 20px;">
                    <a asp-controller="Adoptions" asp-action="ExportToPdf" class="add-adoption-action" target="_blank">
                        Download PDF Report
                    </a>
                </div>

                @if (Model.AllAdoptionRequests != null && Model.AllAdoptionRequests.Any())
                {
                    <ul class="adoption-list">
                        @foreach (var request in Model.AllAdoptionRequests)
                        {
                            <li class="adoption-item">
                                <div class="pet-info">
                                    <strong>Pet Name:</strong> @request.Pet?.Name
                                </div>
                                <div>
                                    <strong>Pet ID:</strong> @request.PetId
                                </div>
                                <div>
                                    <strong>User ID:</strong> @request.UserId
                                </div>
                                <div class="adopter-info">
                                    <strong>Request Date:</strong> @request.RequestDate
                                </div>
                                <div class="status-info">
                                    <strong>Status:</strong>
                                    <span class="@GetStatusClass(request.Status)">@request.Status</span>
                                </div>
                                <div class="adoption-status">
                                    @if (request.Status == ApplicationStatus.Pending)
                                    {
                                        <form asp-action="Approve" asp-controller="Adoptions" method="post">
                                            <input type="hidden" name="id" value="@request.Id" />
                                            <button type="submit" class="adoption-action adoption-approve">Approve</button>
                                        </form>
                                        <form asp-action="Reject" asp-controller="Adoptions" method="post">
                                            <input type="hidden" name="id" value="@request.Id" />
                                            <button type="submit" class="adoption-action adoption-reject">Reject</button>
                                        </form>
                                    }
                                </div>
                                <div class="actions">
                                    <a asp-controller="Adoptions" asp-action="Details" asp-route-id="@request.Id" class="view-button">View</a>
                                </div>
                                   
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>No adoption requests found.</p>
                }
            </div>
            <div id="admin-view-volunteer-requests" class="admin-content" style="display:none;">
    <h3>Volunteer Applications</h3>
    @if (Model.AllVolunteerApplications != null && Model.AllVolunteerApplications.Any())
    {
        <ul class="adoption-list">
            @foreach (var application in Model.AllVolunteerApplications)
            {
                <li class="adoption-item">
                    <div class="pet-info">
                        <strong>Full Name:</strong> @application.FullName
                    </div>
                    <div>
                        <strong>User ID:</strong> @application.UserId
                    </div>
                     <div class="adopter-info">
                        <strong>Request Date:</strong> @application.RequestDate
                    </div> 
                    <div class="status-info">
                        <strong>Status:</strong> <span class="@GetStatusClass(application.Status)">@application.Status</span>
                    </div>
                    <div class="actions">
                        <a asp-controller="Volunteer" asp-action="Details" asp-route-id="@application.Id" class="btn">View</a>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No volunteer applications found.</p>
    }
</div>

            <div id="admin-view-shelters" class="admin-content" style="display:none;">
                <h3>Shelter List</h3>

                @if (Model.Shelters != null && Model.Shelters.Any())
                {
                    <ul class="adoption-list">
                        @foreach (var shelter in Model.Shelters)
                        {
                            <li class="adoption-item">
                                <div class="pet-info">
                                    <strong>Name:</strong> @shelter.Name
                                </div>
                                <div class="adopter-info">
                                    <strong>Shelter Id:</strong> @shelter.ShelterId
                                </div>
                                <div class="status-info">
                                    <strong>Location:</strong> @shelter.Location
                                </div>
                                <div class="admin-buttons">
                                    <a class="edit-button" asp-controller="Shelters" asp-action="Edit" asp-route-id="@shelter.ShelterId">Edit</a>
                                    <form method="post" asp-controller="Shelters" asp-action="Delete" asp-route-id="@shelter.ShelterId"
                                          onsubmit="return confirm('Are you sure you want to delete this shelter?');"
                                          style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="delete-button">Delete</button>
                                    </form>
                                    <a class="view-button" asp-controller="Shelters" asp-action="Details" asp-route-id="@shelter.ShelterId">View</a>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>No shelters found.</p>
                }
            </div>

            <div id="admin-view-users" class="admin-content" style="display:none;">
                <h3>All Users</h3>
                @if (Model.Users != null && Model.Users.Any())
                {
                    <ul class="adoption-list">
                        @foreach (var user in Model.Users)
                        {
                            <li class="adoption-item">
                                <div class="pet-info">
                                    <strong>Email:</strong> @user.Email
                                </div>
                                <div class="adopter-info">
                                    <strong>User ID:</strong> @user.Id
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>No users found.</p>
                }
            </div>

            <div id="admin-data-insights" class="admin-content" style="display:none;">
                <h3>Data Insights & Analytics</h3>
                
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px; margin-top: 20px;">
                    
                    <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid #2F3C7E;">
                        <h4 style="margin-top: 0; color: #2F3C7E;">Most Requested Animal Type</h4>
                        @if (Model.MostAdoptedAnimal != null)
                        {
                            <p style="font-size: 24px; font-weight: bold; margin: 10px 0;">@Model.MostAdoptedAnimal.PetType</p>
                            <p style="color: #666;">Total Requests: <strong>@Model.MostAdoptedAnimal.TotalRequests</strong></p>
                        }
                        else
                        {
                            <p>No data available</p>
                        }
                    </div>

                    <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid #28a745;">
                        <h4 style="margin-top: 0; color: #28a745;">Total Volunteer Requests</h4>
                        <p style="font-size: 24px; font-weight: bold; margin: 10px 0;">@Model.TotalVolunteerRequests</p>
                        <p style="color: #666;">All time applications</p>
                    </div>
                </div>

                <div style="margin-top: 30px;">
                    <h4 style="color: #2F3C7E;">Shelter Capacity Overview</h4>
                    @if (Model.ShelterCapacityStatistics != null && Model.ShelterCapacityStatistics.Any())
                    {
                        <ul class="adoption-list">
                            @foreach (var shelter in Model.ShelterCapacityStatistics)
                            {
                                <li class="adoption-item">
                                    <div class="pet-info">
                                        <strong>Shelter:</strong> @shelter.ShelterName
                                    </div>
                                    <div class="adopter-info">
                                        <strong>Capacity:</strong> @shelter.Capacity
                                    </div>
                                    <div class="status-info">
                                        <strong>Current Occupancy:</strong> @shelter.CurrentOccupancy
                                    </div>
                                    <div class="status-info">
                                        <strong>Occupancy Rate:</strong> @shelter.OccupancyPercentage.ToString("F1")%
                                    </div>
                                    <div style="width: 100%; margin-top: 10px;">
                                        <div style="width: 100%; background-color: #e9ecef; border-radius: 4px; height: 20px; overflow: hidden;">
                                            <div style="width: @shelter.OccupancyPercentage%; background-color: @(shelter.OccupancyPercentage > 80 ? "#dc3545" : shelter.OccupancyPercentage > 60 ? "#ffc107" : "#28a745"); height: 100%; transition: width 0.3s;"></div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No shelter data available.</p>
                    }
                </div>

                <!-- User Adoption Success Rates -->
                <div style="margin-top: 30px;">
                    <h4 style="color: #2F3C7E;">User Adoption Statistics</h4>
                    @if (Model.UserAdoptionStatistics != null && Model.UserAdoptionStatistics.Any())
                    {
                        <ul class="adoption-list">
                            @foreach (var userStat in Model.UserAdoptionStatistics)
                            {
                                <li class="adoption-item">
                                    <div class="pet-info">
                                        <strong>User:</strong> @userStat.UserEmail
                                    </div>
                                    <div class="adopter-info">
                                        <strong>Total Requests:</strong> @userStat.TotalRequests
                                    </div>
                                    <div class="status-info">
                                        <strong>Approved:</strong> @userStat.ApprovedRequests
                                    </div>
                                    <div class="status-info">
                                        <strong>Success Rate:</strong> @userStat.SuccessRate.ToString("F1")%
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No user adoption data available.</p>
                    }
                </div>
            </div>
            </div>
            
    }

   







    <script>
        function showContent(contentId, button) {
            var allContent = document.querySelectorAll('.profile-content');
            allContent.forEach(function (content) {
                content.style.display = 'none';
            });

            document.getElementById(contentId).style.display = 'block';

            var allButtons = document.querySelectorAll('.profile-actions button');
            allButtons.forEach(function (btn) {
                btn.classList.remove('active');
            });

            button.classList.add('active');

            history.replaceState(null, null, '#' + contentId);
        }

        window.onload = function () {
            var hash = window.location.hash.substring(1);
            var button;

            if (hash && document.getElementById(hash)) {

                button = document.querySelector('.profile-actions button[onclick*="' + hash + '"]');
                if (button) {
                    showContent(hash, button);
                    return;
                }
            }

            var defaultButton = document.querySelector('.profile-actions button');
            if (defaultButton) {
                defaultButton.click();
            }
        };

                function showAdminContent(contentId, button) {
            var allAdminContent = document.querySelectorAll('.admin-content');
            allAdminContent.forEach(function (content) {
                content.style.display = 'none';
            });

            document.getElementById(contentId).style.display = 'block';

            var allAdminButtons = button.parentElement.querySelectorAll('button');
            allAdminButtons.forEach(function (btn) {
                btn.classList.remove('active');
            });

            button.classList.add('active');
        }
    </script>
</body>
</html>
