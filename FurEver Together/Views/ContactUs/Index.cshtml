@{
    ViewData["Title"] = "Contact Us";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href=".\css\contactus.css">
    <title>Contact Us</title>
</head>
<body>
    <div class="contact-container">
        <div class="title">Contact Us</div>
        <div class="contact-info">
            <div class=" center-text">
                <p> Have questions or feedback? Feel free to reach out using the form below or contact us using the information provided.</p>
            </div>
            <p>Contact Information:</p>
            <div class="contact-info">
                <p><strong>Email:</strong> <span>contact@petadoptioncenter.com</span></p>
                <p><strong>Phone:</strong> +1 (555) 123-4567</p>
                <p><strong>Address:</strong> 123 Main Street, City, Country</p>
            </div>
        </div>
        <form action="#" method="post">
            <div class="form-group">
                <label for="message">Message:</label>
                <textarea id="message" name="message" rows="5" placeholder="Enter your message here"></textarea>
            </div>
            <div class="form-group">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>
