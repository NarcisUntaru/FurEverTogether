@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href=".\css\register.css">
    <title>Register</title>
</head>
<body>
    <div class="register-container">
        <div class="heading">Register</div>
        <form action="" class="form">
            <input required="" class="input" type="username" name="username" id="username" placeholder="Username">
            <input required="" class="input" type="firstname" name="firstname" id="firstname" placeholder="First Name">
            <input required="" class="input" type="lastname" name="lastname" id="lastname" placeholder="Last Name">
            <input required="" class="input" type="phonenumber" name="phonenumber" id="phonenumber" placeholder="Phone Number">
            <input required="" class="input" type="email" name="email" id="email" placeholder="E-mail">
            <input required="" class="input" type="password" name="password" id="password" placeholder="Password">
            <input class="login-button" type="submit" value="Register">

        </form>
        <span class="agreement"><a href="#">Learn user licence agreement</a></span>
    </div>

</body>

</html>
