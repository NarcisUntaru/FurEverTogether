@{
    ViewData["Title"] = "Adoptions";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/adoptions.css" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="page-container">
        <div class="text-container">
            Adopt a Pet Today!
        </div>
        <div class="card-container">
            <a asp-controller="Pets" asp-action="Index" asp-route-type="Cat" class="card card-cat">
                <img src="/uploads/Adoption/cat_adopt.jpg" alt="Adopt a Cat" />
            </a>
            <a asp-controller="Pets" asp-action="Index" asp-route-type="Dog" class="card card-dog">
                <img src="/uploads/Adoption/dog_adopt.jpg" alt="Adopt a Dog" />
            </a>
            <a asp-controller="Pets" asp-action="Index" asp-route-type="Bird" class="card card-bird">
                <img src="/uploads/Adoption/bird_adopt.jpg" alt="Adopt a Bird" />
            </a>
            <a asp-controller="Pets" asp-action="Index" asp-route-type="SmallMammal" class="card card-small-mammals">
                <img src="/uploads/Adoption/hamster_adopt.jpg" alt="Adopt a Small Mammal" />
            </a>
        </div>
    </div>
</body>
</html>
