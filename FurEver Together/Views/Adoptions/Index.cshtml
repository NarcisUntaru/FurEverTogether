@{
    ViewData["Title"] = "Adoptions";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/adoptions.css">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="page-container">
        <div class="text-container">
            Adopt a Pet Today!
        </div>
        <div class="card-container">
            <a asp-controller="Cats" asp-action="Index" class="card card-cat">
                <img src="/uploads/Adoption/cat_adopt.jpg">
            </a>
            <a asp-controller="Dogs" asp-action="Index" class="card card-dog">
                <img src="/uploads/Adoption/dog_adopt.jpg">
            </a>
        </div>
    </div>
</body>
</html>
