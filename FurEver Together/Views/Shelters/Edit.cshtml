@model FurEver_Together.DataModels.Shelter

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Edit Shelter</title>
    <link rel="stylesheet" href="/css/create.css" />
</head>

<body>
    <div class="form-container">
        <h1 class="form-heading">Edit Shelter</h1>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShelterId" />
            
            <div class="form-group">
                <label for="Name" class="control-label">Shelter Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Address" class="control-label">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Capacity" class="control-label">Capacity</label>
                <input asp-for="Capacity" class="form-control" type="number" min="1" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Latitude" class="control-label">Latitude</label>
                <input asp-for="Latitude" class="form-control" type="number" step="0.000001" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Longitude" class="control-label">Longitude</label>
                <input asp-for="Longitude" class="form-control" type="number" step="0.000001" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

        <div>
            <a asp-action="Details" asp-route-id="@Model.ShelterId">Back to Details</a>
        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
