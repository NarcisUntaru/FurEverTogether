@model FurEver_Together.DataModels.Shelter

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Delete Shelter</title>
    <link rel="stylesheet" href="/css/create.css" />
</head>

<body>
    <div class="form-container">
        <h1 class="form-heading">Delete Shelter</h1>
        <h3>Are you sure you want to delete this shelter?</h3>
        <hr />
        
        <dl class="row">
            <dt class="col-sm-3">Shelter Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            
            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>
            
            <dt class="col-sm-3">Capacity</dt>
            <dd class="col-sm-9">@Model.Capacity</dd>
            
            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="ShelterId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
